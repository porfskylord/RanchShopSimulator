<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox fx:id="cartItemRow" alignment="CENTER" prefHeight="50.0" prefWidth="832.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lordscave.ranchshopsimulator.controller.CartItemRowController">

    <padding>
        <Insets bottom="5" left="10" right="10" top="5" />
    </padding>

    <ImageView fx:id="itemImage" fitHeight="40" fitWidth="56.0" />

    <Label fx:id="itemName" prefHeight="17.0" prefWidth="175.0" style="-fx-text-fill: #3366cc; -fx-font-weight: bold; -fx-cursor: hand;" text="Item Name">
      <padding>
         <Insets left="10.0" />
      </padding></Label>
   <Region prefHeight="40.0" prefWidth="169.0" />

    <Label fx:id="itemPrice" prefHeight="20.0" prefWidth="240.0" style="-fx-text-fill: #ff4444; -fx-font-size: 14;" text="0" />
   <Region prefHeight="40.0" prefWidth="102.0" />

    <HBox alignment="CENTER" spacing="5">
        <Button onAction="#decreaseQuantity" prefHeight="25.0" prefWidth="25.0" text="&lt;" />
        <Label fx:id="itemQuantity" text="1" />
        <Button onAction="#increaseQuantity" text="&gt;" />
    </HBox>
</HBox>
